{
  "name": "fireflyy",
  "version": "4.0.0-alpha.16",
  "description": " CLI orchestrator for automatic semantic versioning, changelog generation, and creating releases. Built for my own use cases.",
  "type": "module",
  "license": "MIT",
  "author": "Yehezkiel Dio Sinolungan <yehezkieldio@proton.me>",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "assets"
  ],
  "main": "./dist/config.js",
  "module": "./dist/config.js",
  "types": "./dist/config.d.ts",
  "exports": {
    ".": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    }
  },
  "typesVersions": {
    "*": {
      "config": [
        "./dist/config.d.ts"
      ]
    }
  },
  "bin": {
    "firefly": "dist/main.js",
    "ff": "dist/main.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "scripts": {
    "build": "tsdown",
    "build:json-schema": "bun run scripts/generate-json-schema.ts assets/firefly.schema.json",
    "postbuild": "bun run build:json-schema",
    "dev": "bun run src/cli/main.ts",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix --unsafe"
  },
  "dependencies": {
    "c12": "^3.3.2",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "git-cliff": "^2.10.1",
    "neverthrow": "^8.2.0",
    "semver": "^7.7.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.3.4",
    "@types/semver": "^7.7.1",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3",
    "ultracite": "6.4.0"
  },
  "keywords": [
    "cli",
    "changelog",
    "git",
    "github",
    "gitlab",
    "release",
    "semver",
    "versioning",
    "automation",
    "orchestrator"
  ],
  "homepage": "https://github.com/yehezkieldio/firefly#readme",
  "bugs": {
    "url": "https://github.com/yehezkieldio/firefly/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yehezkieldio/firefly.git"
  }
}
