{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "plugins": [".biome/no-try-catch.grit", ".biome/never-throw.grit"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 4,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noEmptySource": "off",
        "noUselessUndefined": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noEmptyBlockStatements": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noMagicNumbers": "off",
        "useConsistentTypeDefinitions": "off",
        "noParameterProperties": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "complexity": {
        "noVoid": "off",
        "noExcessiveLinesPerFunction": {
          "level": "warn",
          "options": {
            "maxLines": 50
          }
        },
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 50
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    },
    "globals": ["Bun"]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "extends": ["ultracite/core", "ultracite/react"]
}
